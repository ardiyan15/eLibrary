<%- include('../includes/head.ejs') %> <%- include('../includes/navbar.ejs') %>
<div class="d-flex justify-content-around">
  <div class="col-6 p-4">
    <div class="card shadow p-3">
      <div class="row">
        <div class="col-2">
          <img
            style="width: 100px"
            class="card-img-top"
            src="/<%= transaction.transaction_details.book.image %>"
            alt="Card image cap"
          />
        </div>
        <div class="col-6">
          <h5 class="card-title">
            <%= transaction.transaction_details.book.title %>
          </h5>
          <p class="card-text"><%= transaction.address_delivery %></p>
          <form action="/transaction" method="POST">
            <input
              type="hidden"
              name="transaction_id"
              value="<%= transaction.id %>"
            />
            <button type="submit" class="btn btn-primary btn-sm rounded">
              Complete The Order
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
<%- include('../includes/footer.ejs') %>
