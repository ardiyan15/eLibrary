<%- include('../includes/head.ejs') %> <%- include('../includes/navbar.ejs') %>
<link rel="stylesheet" href="/public/css/frontoffice/home/index.css" />
<div class="container mt-3 pb-5">
  <div id="carouselExampleInterval" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
      <div class="carousel-item active" data-interval="10000">
        <img
          src="/public/img/2201.w015.n001.685B.p15.685.jpg"
          class="d-block w-100"
          alt="Image Carousel"
          height="300"
        />
      </div>
      <div class="carousel-item" data-interval="2000">
        <img
          src="/public/img/146Z_2107.w026.n002.559B.p1.559.jpg"
          class="d-block w-100"
          alt="Image Carousel"
          height="300"
        />
      </div>
    </div>
    <a
      class="carousel-control-prev"
      href="#carouselExampleInterval"
      role="button"
      data-slide="prev"
    >
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a
      class="carousel-control-next"
      href="#carouselExampleInterval"
      role="button"
      data-slide="next"
    >
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
  <div class="row mt-5">
    <% let i = 1; %> <% results.forEach(result => { %>
    <div class="col-md-12 mt-5">
      <div class="row d-flex justify-content-between">
        <h4><%= result.category %></h4>
        <a href="/categories/<%= encrypt() %>" class="see-all">See All</a>
      </div>
    </div>
    <div class="col-md-12">
      <div class="row">
        <% for(let j = 0; j < result.book.length; j++){ %>
        <div class="col-md-3">
          <div class="card shadow-lg">
            <img
              src="/<%= result.book[j].image %>"
              height="250"
              width="180"
              class="mx-auto"
              alt="<%= result.book[j].title %>"
            />
            <div class="card-body">
              <a
                href="#"
                class="card-title text-decoration-none text-dark font-weight-bold"
                data-toggle="tooltip"
                data-placement="top"
                title="<%= result.book[j].title %>"
              >
                <%= result.book[j].title %>
              </a>
              <div class="row">
                <div class="col-md-12">
                  <span class="text-muted">Rating</span>
                </div>
                <div class="col-md-12">
                  <span class="fa fa-star checked"></span>
                  <span class="fa fa-star checked"></span>
                  <span class="fa fa-star checked"></span>
                  <span class="fa fa-star checked"></span>
                  <span class="fa fa-star"></span>
                </div>
              </div>
            </div>
          </div>
        </div>
        <% } %>
      </div>
    </div>
    <% }) %>
  </div>
</div>
<%- include('../includes/footer.ejs') %>
